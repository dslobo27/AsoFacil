@{
    Layout = "_LayoutNaoAutenticado";
    ViewData["Title"] = "Cadastro de Empresa";
}

<main id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="heading text-success text-center">Informe os dados da empresa! <br /> Sua solicitação passará por análise e você será notificado da ativação!</h5>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form action="" method="post" id="cadastroEmpresaForm" name="cadastroEmpresaForm">
                            <div class="form-group">
                                <label for="cnpj" class="text-success">CNPJ</label><br>
                                <input type="text" name="cnpj" id="cnpj" class="form-control" data-mask="00.000.000/0000-00">
                            </div>
                            <div class="form-group">
                                <label for="razao-social" class="text-success">Razão Social</label><br>
                                <input type="text" name="razao-social" id="razao-social" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="email" class="text-success">Email</label><br>
                                <input type="email" name="email" id="email" class="form-control">
                            </div>
                            <input type="submit" value="Salvar" name="submit" class="btn btn-success">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
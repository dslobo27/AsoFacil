@model AsoFacil.Models.Empresa.EmpresaViewModel
@{
    Layout = "_LayoutAutenticado";
    ViewData["Title"] = "Empresas";
}

<main id="main">
    <div class="container">        
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" id="cadastroEmpresaForm" name="cadastroEmpresaForm" asp-controller="Empresa" asp-action="AtualizarCadastro">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Ativa" />
                            <input type="hidden" asp-for="FlagClinica" />
                            <div class="form-group">
                                <label for="cnpj" class="text-success">CNPJ</label><br>
                                <input type="text" asp-for="CNPJ" class="form-control" data-mask="00.000.000/0000-00">
                            </div>
                            <div class="form-group">
                                <label for="razao-social" class="text-success">Razão Social</label><br>
                                <input type="text" asp-for="RazaoSocial" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="email" class="text-success">Email</label><br>
                                <input type="email" asp-for="Email" class="form-control">
                            </div>
                            <input type="submit" value="Salvar" name="submit" class="btn btn-success">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
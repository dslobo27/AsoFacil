@model AsoFacil.Models.Medico.ManterMedicoViewModel

<form id="form-cadastro" name="form-cadastro" class="form">
    <div class="form-group">
        <input type="hidden" asp-for="Id" id="id" />
    </div>
    <div class="form-group">
        <label for="crm" class="text-success">CRM</label><br>
        <input type="text" asp-for="CRM" id="crm" class="form-control">
        <span asp-validation-for="CRM" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="nome" class="text-success">Nome</label><br>
        <input type="text" asp-for="Nome" id="nome" class="form-control">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="email" class="text-success">Email</label><br>
        <input type="text" asp-for="Email" id="email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="empresa" class="text-success">Clínica</label><br>
        <select asp-for="EmpresaId" id="empresa" class="form-control"></select>
        <span asp-validation-for="EmpresaId" class="text-danger"></span>
    </div>
</form>
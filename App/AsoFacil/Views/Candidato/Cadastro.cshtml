@{
    ViewData["Title"] = "Candidatos";
    Layout = "_LayoutAutenticado";
}

<main id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h6>Filtros</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="nome">Nome</label><br>
                                    <input type="text" class="form-control" id="filtro-nome">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="nome">RG</label><br>
                                    <input type="text" class="form-control" id="filtro-rg">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="nome">Email</label><br>
                                    <input type="text" class="form-control" id="filtro-email">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <input type="submit" class="btn btn-success" id="btn-filtro" value="Buscar" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <a class="btn btn-success" id="btn-criar" href="#">Novo candidato</a>
        <br />
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h6>Candidatos cadastrados</h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover" id="table-candidatos">
                            <thead>
                                <tr>
                                    <th>Editar</th>
                                    <th>Nome</th>
                                    <th>RG</th>
                                    <th>Email</th>
                                    <th>Excluir</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div id="partial-modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Candidato</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="btn-salvar">Salvar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
        <div id="modal-excluir" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Candidato</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" value="" id="id-exclusao" />
                        <p>Deseja realmente excluir esse registro?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" id="btn-confirmar">Excluir</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/js/app/Candidato/Candidato.js"></script>
}
